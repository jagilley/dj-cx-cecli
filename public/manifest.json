{
  "manifest_version": 3,
  "name": "Dreamjob Chrome Extension",
  "version": "0.1.0",
  "description": "Autofill job applications based on your resume",
  "icons": {
    "16": "icons/icon_16.png",
    "32": "icons/icon_32.png",
    "48": "icons/icon_48.png",
    "128": "icons/icon_128.png"
  },
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_title": "Dj Cx Cecli",
    "default_popup": "popup.html"
  },
  "permissions": [
    "storage",
    "fileSystem",
    "webRequest",
    "webRequestBlocking",
    "<all_urls>"
  ],
  "host_permissions": [
    "activeTab", "storage", "https://api.openai.com/", "tabs", "https://*.supabase.co", "fileSystem", "https://cdnjs.cloudflare.com", "http://cdnjs.cloudflare.com", "https://mozilla.github.io"
  ],
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "all_frames": true,
      "run_at": "document_idle",
      "js": [
        "contentScript.js"
      ]
    }
  ]
}